upstream upstream_content_server {
    server 127.0.0.1:{{ content_private_port }};
}

server {
    listen {{ content_public_port }};

    access_log /var/log/nginx/content_server.access.log main;
    error_log  /var/log/nginx/content_server.error.log;


    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://upstream_content_server;
    }
}
