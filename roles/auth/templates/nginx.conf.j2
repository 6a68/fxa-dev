upstream upstream_auth_server {
    server 127.0.0.1:9000;
}

server {
    listen 80;

    access_log /var/log/nginx/auth_server.access.log main;
    error_log  /var/log/nginx/auth_server.error.log;


    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://upstream_auth_server;
    }
}
