{
	"builders": [
		{
			"type": "virtualbox-iso",
			"guest_os_type": "RedHat_64",
			"iso_urls": [
				"http://mirrors.200p-sf.sonic.net/scientific/6.4/x86_64/iso/SL-64-x86_64-2013-03-18-Install-DVD.iso",
				"http://ftp.scientificlinux.org/linux/scientific/6.4/i386/iso/SL-64-i386-2013-03-18-Install-DVD.iso"
			],
			"iso_checksum": "99f2b481aaad90dfc3712e8d886cd0791626936e",
			"iso_checksum_type": "sha1",
			"ssh_username": "vagrant",
			"ssh_password": "vagrant",
			"shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
			"boot_wait": "5s",
			"boot_command": [
				"<esc>",
				"<wait>",
				"linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks6.cfg",
				"<enter>"
			],
			"http_directory": "http",
			"guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    	"virtualbox_version_file": ".vbox_version"
		},
		{
			"type": "vmware-iso",
			"iso_urls": [
				"http://mirrors.200p-sf.sonic.net/scientific/6.4/x86_64/iso/SL-64-x86_64-2013-03-18-Install-DVD.iso",
				"http://ftp.scientificlinux.org/linux/scientific/6.4/i386/iso/SL-64-i386-2013-03-18-Install-DVD.iso"
			],
			"iso_checksum": "99f2b481aaad90dfc3712e8d886cd0791626936e",
			"iso_checksum_type": "sha1",
			"ssh_username": "vagrant",
			"ssh_password": "vagrant",
			"tools_upload_flavor": "linux",
			"shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
			"boot_wait": "5s",
			"boot_command": [
				"<esc>",
				"<wait>",
				"linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks6.cfg",
				"<enter>"
			],
			"http_directory": "http",
			"tools_upload_flavor": "linux"
		}
	],
	"provisioners": [
	{
		"type": "shell",
		"execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
		"scripts": [
			"script/fix-slow-dns.sh",
			"script/sshd.sh",
			"script/vagrant.sh",
			"script/vmtools.sh"
		]
	},
	{
		"type": "ansible-local",
		"playbook_file": "common.yml",
		"playbook_paths": ["./"],
		"role_paths": [
			"../roles/common"
		]
	},
	{
		"type": "shell",
		"execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
		"scripts": [
			"script/cleanup.sh",
			"script/zerodisk.sh"
		]
	}
	],
	"post-processors": [{
		"type": "vagrant",
		"output": "sl64-{{.Provider}}.box"
	}
	]
}
